<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_hand_input"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.hand_input.HandInputFragment"
    android:background="@color/colorFragmentBackground"
    android:focusable="true"
    android:clickable="true">

    <ImageButton
        android:id="@+id/button_back_hif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_back"
        app:tint="@color/colorText"
        android:background="@drawable/button" />

    <TextView
        android:id="@+id/text_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/button_back_hif"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_horizontal"
        android:fontFamily="@font/calibri"
        android:layout_marginTop="40dp"
        android:text="@string/input_card"
        android:textSize="18sp"
        android:textColor="@color/colorText"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        android:id="@+id/textinput_name_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/text_input_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/calibri"
        app:endIconMode="clear_text"
        >
    <android.widget.EditText
        android:id="@+id/edittext_card_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/custom_edittext"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:fontFamily="@font/calibri"
        android:drawableStart="@drawable/custom_hand_input"
        android:drawablePadding="10dp"
        android:hint="@string/card_name"
        android:textColor="@color/colorText"
        android:textSize="14sp"
        android:inputType="textCapSentences"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
        app:hintAnimationEnabled="false"
        app:hintEnabled="false"
        android:id="@+id/textinput_input_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textinput_name_card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/calibri"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:counterEnabled="true"
        app:endIconMode="clear_text"
        app:counterMaxLength="13"
        >

        <android.widget.EditText
            android:id="@+id/edittext_input_card"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:fontFamily="@font/calibri"
            android:background="@drawable/custom_edittext"
            android:paddingStart="15dp"
            android:maxLength="13"
            android:paddingEnd="15dp"
            android:drawableStart="@drawable/custom_hand_input"
            android:drawablePadding="10dp"
            android:textColor="@color/colorText"
            android:textSize="14sp"
            android:inputType="number"
            android:hint="@string/text_hint_input_card"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <android.widget.Button
        android:id="@+id/tv_category"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:fontFamily="@font/calibri"
        android:background="@drawable/custom_button_category"
        android:text="@string/Category"
        android:textAllCaps="false"
        android:textColor="@color/colorView"
        app:layout_constraintEnd_toEndOf="@+id/textinput_input_card"
        app:layout_constraintStart_toStartOf="@+id/textinput_input_card"
        app:layout_constraintTop_toBottomOf="@+id/textinput_input_card" />

    <android.widget.Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="@string/text_add_button"
        android:textColor="@color/white"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_add_card"
        android:drawableTint="@color/white"
        android:background="@drawable/custom_button_add"
        />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toTopOf="@+id/addBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/calibri"
        android:text="@string/uncorrect_code"
        android:textColor="@color/error"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/ivCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_category"
        app:layout_constraintBottom_toTopOf="@+id/tvError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/numberCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/ivCode"
        app:layout_constraintStart_toStartOf="@+id/ivCode"
        android:textColor="@color/colorText"
        android:fontFamily="@font/calibri"
        app:layout_constraintEnd_toEndOf="@+id/ivCode"
        android:gravity="center"
        android:text="" />

</androidx.constraintlayout.widget.ConstraintLayout>